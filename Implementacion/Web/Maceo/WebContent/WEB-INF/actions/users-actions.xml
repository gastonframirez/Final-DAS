<?xml version="1.0" encoding="UTF-8"?>
<actions xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	     xsi:noNamespaceSchemaLocation="../schema/actions.xsd">
    <form-beans>
    </form-beans>
    <action-mappings>
        <action path="/Login.do" type="LoginPageAction">
            <forward name="success" path="/users/login.jsp"/>
        </action>
        <action path="/ValidateLogin.do" type="LoginAction">
            <forward name="normal" path="/users/loginResult.jsp"/>
            <forward name="error" path="/users/loginError.jsp"/>
        </action>
        <action path="/Registrar.do" type="RegistrarAction">
            <forward name="success" path="/users/registrarResult.jsp"/>
        </action>
        <action path="/Registro.do" type="RegistroAction">
            <forward name="success" path="/users/registro.jsp"/>
        </action>
        <action path="/Logout.do" type="LogoutAction">
            <forward name="success" path="/users/logout.jsp"/>
        </action>
    </action-mappings>
</actions>
